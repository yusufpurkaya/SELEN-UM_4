<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="methodlar">
    <test name="otelleilgilimethodlar">
        <classes>
            <class name="tests.day18.C02WebTables">
                <methods>
                    <exclude name="printRows"></exclude>
                    <!-- method secimi yapilirken :
                    include: sadece omethod secilir digerleri exlude olmus olur
                    exlude : sadece biri haric tutulur -->
                    <exclude name="table"></exclude>
                </methods>
            </class>
            <class name="tests.day19.C01_WebTableDynamikLocates">
                <methods>
                    <include name="satirYazdirTesti"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>
